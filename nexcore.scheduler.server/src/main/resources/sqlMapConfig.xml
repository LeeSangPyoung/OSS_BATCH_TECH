<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <!-- 환경 설정 -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/nexcore"/>
                <property name="username" value="nexcore"/>
                <property name="password" value="password"/>
            </dataSource>
        </environment>
    </environments>

    <!-- Mapper 파일 등록 -->
    <mappers>
        <mapper resource="sql/Scheduler.postgresql.xsql"/>
        <mapper resource="sql/Monitor.postgresql.xsql"/>
        <mapper resource="sql/Controller.postgresql.xsql"/>
    </mappers>
</configuration>
